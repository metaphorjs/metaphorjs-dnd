{
  "version": "0.1",
  "description": "MetaphorJs.Draggable and MetaphorJs.Droppable",

  "push": [
    "github"
  ],

  "build": {
    "standalone": {
      "target": "dist/metaphorjs.dnd.js",
      "files": [
        "metaphorjs/src/MetaphorJs.js",
        ["src/class/**", {"as": "*"}],
        "src/directive/**",
        "src/plugin/**",
        ["metaphorjs/src/func/dom/onReady.js", {"as": "onReady"}]
      ],
      "options": {
        "wrap": true,
        "global": true,
        "expose": [
          "Draggable",
          "Droppable",
          "onReady"
        ]
      }
    },

    "standalone-min": {
      "extend": "standalone",
      "target": "dist/metaphorjs.dnd.min.js",
      "pipe": ["build", "compile", "write"]
    }
  }
}